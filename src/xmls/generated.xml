                <geom name="car1_chassis_geom" material="car1_chassis_material" type="box" size="1.0 0.5 0.125" mass="1500" />
                <body name="car1_wheel1" pos="0.6 -0.5 -0.0625" zaxis="0 1 0">
                    <joint name="car1_wheel1_joint_steer" type="hinge" axis="0 1 0" limited="true" range="-45 45" />
                    <joint name="car1_wheel1_joint_roll" />
                    <geom type="cylinder" size="0.3 0.1" material="wheel_material" mass="30" friction="1 0.001 0.001" />
                </body>
                <body name="car1_wheel2" pos="0.6 0.5 -0.0625" zaxis="0 1 0">
                    <joint name="car1_wheel2_joint_steer" type="hinge" axis="0 1 0" limited="true" range="-45 45" />
                    <joint name="car1_wheel2_joint_roll" />
