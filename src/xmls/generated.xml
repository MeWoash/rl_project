        <fixed name="car1_back_wheels_tendon">
            <joint joint="car1_wheel3_joint_roll" coef="1000" />
            <joint joint="car1_wheel4_joint_roll" coef="1000" />
        </fixed>
    </tendon>
    <actuator>
        <motor name="car1_engine_power" tendon="car1_back_wheels_tendon" ctrlrange="-1 1" />
        <position name="car1_wheel1_angle" joint="car1_wheel1_joint_steer" kp="1000" ctrlrange="-0.7853981633974483 0.7853981633974483" />
