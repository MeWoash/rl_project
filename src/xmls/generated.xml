        <light dir="0 0 -1" pos="0 0 100" diffuse="1 1 1" castshadow="true" />
        <camera name="TopDownCam" pos="0 0 24.999999999999996" euler="0 0 -90" fovy="90" />
        <body name="car1" pos="0 0 2">
            <freejoint />
            <body name="car1_front_lights" pos="1.0 0 0" />
